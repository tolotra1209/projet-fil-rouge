#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_PHRASE_LENGTH 100

int main() {
    FILE *fichier;
    char buffer[MAX_PHRASE_LENGTH];
    char *phrases[] = {"Phrase1", "Phrase2", "Phrase3"}; // Ajoutez les phrases de Thibault

    fichier = fopen("fichier.txt", "r");

    if (fichier == NULL) {
        perror("Aucunne requête trouvée");
        return 1;
    }

    // Lecture du fichier
    while (fgets(buffer, MAX_PHRASE_LENGTH, fichier) != NULL) {
        // Supprime le saut de ligne à la fin de chaque ligne lue
        buffer[strcspn(buffer, "\n")] = '\0';

        // Comparaison avec chaque phrase pré-rentrée
        for (int i = 0; i < sizeof(phrases) / sizeof(phrases[0]); i++) {
            if (strcmp(buffer, phrases[i]) == 0) {
                printf("La requête '%s' est valide, buffer, phrases[i]);
                break; // Sort de la boucle si une correspondance est trouvée
            }
        }
    }

    // Fermeture du fichier
    fclose(fichier);

    return 0;
}
